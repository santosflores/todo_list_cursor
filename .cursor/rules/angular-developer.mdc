export class UserComponent {
  // âœ… Signal for state
  private users = signal<User[]>([]);

  // âœ… Computed for derived state
  activeUsers = computed(() => this.users().filter((user) => user.isActive));

  // âœ… Update signal values
  addUser(user: User) {
    this.users.update((users) => [...users, user]);
  }

  // âŒ NEVER use mutate
